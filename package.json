{
  "name": "docker-wp-cli",
  "version": "1.0.0",
  "description": "Run multiple WordPress sites using nginx, php-fpm, mariadb and docker-compose.",
  "main": "dist/cli.js",
  "type": "module",
  "bin": {
    "dwpc": "./dist/cli.js"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc && chmod +x dist/cli.js",
    "watch": "tsc --watch"
  },
  "keywords": [
    "wordpress",
    "docker",
    "docker-compose",
    "nginx",
    "php-fpm",
    "mariadb"
  ],
  "author": "Jacob Proulx",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "inquirer": "^12.6.2"
  },
  "devDependencies": {
    "@inquirer/type": "^3.0.7",
    "@types/chalk": "^2.2.4",
    "@types/node": "^22.15.21",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
